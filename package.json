{
  "name": "match-party",
  "version": "1.0.0",
  "description": "リアルタイムお題回答一致ゲーム - みんなで同じ答えを目指そう！",
  "private": true,
  "homepage": "https://match-party-findy.web.app/",
  "repository": {
    "type": "git",
    "url": "https://github.com/aiandrox/match-party.git"
  },
  "keywords": [
    "game",
    "realtime",
    "firebase",
    "nextjs",
    "typescript"
  ],
  "author": "aiandrox",
  "scripts": {
    "dev": "next dev",
    "dev:emulator": "firebase emulators:start --only firestore",
    "dev:with-emulator": "concurrently \"firebase emulators:start --only firestore\" \"next dev\"",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --watchAll=false --passWithNoTests",
    "generate-ogp": "node scripts/generate-ogp.js"
  },
  "dependencies": {
    "@sentry/nextjs": "^9.42.0",
    "clsx": "^2.1.1",
    "firebase": "^11.2.0",
    "next": "15.3.5",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.4.2",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.13",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.14.8",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-next": "15.3.5",
    "firebase-tools": "^13.35.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "playwright": "^1.54.1",
    "postcss": "^8.4.40",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.5.2"
  }
}
